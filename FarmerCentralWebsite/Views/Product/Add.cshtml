@model ProductViewModel

<h2>Add Product</h2>
<head>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
        <div class="alert alert-success" role="alert">
        @ViewBag.Message
        </div>
}

<form asp-action="Add" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductType"></label>
        <input asp-for="ProductType" class="form-control" />
        <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockPrice"></label>
        <input asp-for="StockPrice" class="form-control" />
        <span asp-validation-for="StockPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Product</button>
    </div>
</form>
