@model List<Product>

<h2>Filtered Products</h2>
<head>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
@if (Model.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
             
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Stock Price</th>
                <th>Date Supplied</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    
                    <td>@product.ProductName</td>
                    <td>@product.ProductType</td>
                    <td>@product.StockPrice</td>
                    <td>@product.DateSupplied.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}
